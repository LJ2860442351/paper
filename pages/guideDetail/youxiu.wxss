.posts{
  width: 90%;
  margin: 5% 30rpx;
}
.posts .navigator{
  border-bottom: 1px solid #aaa;
  margin-bottom: 30rpx;
}
.lunwen_title{
  font-size: 40rpx;
}
.book-content {
  padding: 8rpx;
}
.book-header {
  display: flex;
  margin-bottom: 36rpx;
}

.book-info {
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  color: #9b9b9b;
  margin-left: 30rpx;
}

.book-name {
  font-size: 36rpx;
  color: #000;
  margin-bottom: 10rpx;
}

.book-img {
  display: flex;
  justify-content: center;
  flex-direction: row;
  width: 200px;
  height: 250px;
  margin:4% auto;
  box-shadow: 3px 3px 3px 3px #bbb;
}
