/* pages/show/show.wxss */
.post-detail image{
  display: flex;
  justify-content: center;
  flex-direction: row;
  width: 80%;
  height: 800rpx;
  margin:4% auto;
  box-shadow: 3px 3px 3px 3px #bbb;
}

.extra {
  height: 40px;
  background: #fff;
  border-top: 1px solid #f2f2f2;
  bottom: 0px;
  left: 0;
  right: 0px;
  width: 100%;
  box-shadow: 10px 10px 10px 10px rgba(0, 0, 0, 0.1);
}
.extra-input {
  width: 50%;
  height: 20px;
  margin: 10px;
  font-size: 13px;
  font-weight: 300;
  line-height: 20px;
  padding: 0 6px;
  border-left: 2px solid #48c23d;
  color: #444;
}

.extra-placeholder {
  font-size: 13px;
  font-weight: 300;
  color: #999;
}

/* 点赞 评论 分享 */

.extra-share {
  position: absolute;
  right: 5px;
  width: 50%;
  margin-right: 30px;
}

.extra-share-img {
  width: 20px;
  height: 20px;
  float: right;
  padding: 10px 15px;
}
.zanNum{
  float: right;
  margin-right: 30px;
  margin-top: 5px;
}
.title {
  text-align: center;
  font-size: 50rpx;
  font-family: '草书';
}
.btn{
  background: #bbb;
  color: #fff;
}