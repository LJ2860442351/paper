/* pages/lend/lend.wxss */
.name{
    filter: grayscale(50%);
    background-position-x: 30px;
    background-position-y: 30px;
}
.page-body{
  display: flex;
  flex-direction: column;
  flex: 1;
  height: 1300rpx;
}
.book-intro{
  width: 95%;
}
.name image{
  width: 100%;
  height: 240px;
}

.book-title{
  margin-left: 3%;
  padding-left: 3%;
  display: block;
  font-size: 30rpx;
  background-color: #E5E5E5;
  color: #323232;
  height: 50rpx;
  border-left: 1px solid red;
  border-bottom: 1px solid #E5E5E5;
  width: 100%;
}

.space-line-30{
  display: block;
  height: 30px;
}

.book-msg{
    font-size: 30rpx;
    text-indent: 50rpx;
    color: #323232;
    width: 40%;
}
.btn-area{
  position: fixed;
  left: 35rpx;
  bottom: 0;
  width: 90%;
}

.picker{
  margin-left: 3%;
  width: 120%;
  line-height: 100rpx;
  background: white;
}
.btn-area button{
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    width: 100%;
}
input{
  width: 80%;
  height: 40px;
  padding-left: 20rpx;
  border-radius: 1px solid #ccc;
  
}
.btn{
  background: #ccc;
}