page,
.page,
.page__bd{
    height: 100%;
}
page{
background:url('http://www.liujianfly.com/game/bg.png')no-repeat;
background-size: 100%;
}
.page__bd{
  color: #000;
  padding-bottom: 0;
}
.page__bd navigator{
  margin:auto;
  width: 90%;
  height: 50px;
  border-radius: 30rpx;
  margin-top: 30rpx;
  line-height: 100rpx;
  background: rgb(241, 236, 236);
  opacity: 0.8;
}
.weui-tab__content{
    padding-top:100rpx;
    text-align: center;
}
.new-publish{
  width: 20%;
  margin-left: 25rpx;
  background: grey;
  color: #fff;
  padding-left: 5rpx;
  border-radius: 10rpx;
}
.meal-time-list {
  width: 100%;
  height: 88rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: inline-block;
  white-space: nowrap;
  position: fixed;
}
 .weui-navbar__item {
   padding:0;
 }
.meal-time-item {
  width: auto;
  height: 85rpx;
  display: inline-block;
  line-height: 85rpx;
  vertical-align: middle;
  text-align: center;
  padding:0 15rpx;
}
 
.selected-meal {
  width: 20%;
  height: 85rpx;
  color: #1aae18;
  border-bottom: 5rpx solid #1aae18;
  display:inline-block;
  line-height: 85rpx;
  vertical-align: middle;
  text-align: center;
}
